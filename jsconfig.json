{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/icons": ["src/components/atoms/icons/index.js"],
      "@/icons/*": ["src/components/atoms/icons/*"],
      "@/atoms": ["src/components/atoms/index.js"],
      "@/atoms/*": ["src/components/atoms/*"],
      "@/molecules": ["src/components/molecules/index.js"],
      "@/molecules/*": ["src/components/molecules/*"],
      "@/organisms": ["src/components/organisms/index.js"],
      "@/organisms/*": ["src/components/organisms/*"],
      "@/templates": ["src/components/templates/index.js"],
      "@/templates/*": ["src/components/templates/*"],
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "target": "ES5"
  },
  "include": ["src/**/*"]
}
